<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:orientation="horizontal"
    >
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal" android:layout_marginTop="235dp"
        >

            <EditText android:layout_width="260dp" android:layout_height="40dp"
                      android:textSize="20dp" android:layout_marginLeft="50dp"
                      android:id="@+id/search_text"
                        android:background="@drawable/search_bar" android:paddingLeft="15dp"
                      android:hint="输入单词或释义" android:singleLine="true"
            />

            <ImageButton android:layout_width="50dp" android:layout_height="match_parent"
                           android:onClick="searchClick"
                         android:background="@drawable/search"
            />
        </LinearLayout>

    </LinearLayout>



    <LinearLayout android:layout_width="match_parent" android:layout_height="fill_parent"
        android:orientation="horizontal" android:gravity="bottom"
    >

        <GridLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:columnCount="2" android:rowCount="3"
        >

            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:textSize="20dp" android:text="背单词" android:onClick="startRemberWords"
                     android:layout_row="0" android:layout_column="0"  android:layout_columnWeight="1"
                    android:background="@drawable/searchpage_function_button"
                    android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginBottom="15dp"
            />
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:textSize="20dp" android:text="复    习" android:onClick="startReviewWords"
                    android:layout_row="0" android:layout_column="1" android:layout_columnWeight="1"
                    android:background="@drawable/searchpage_function_button"
                    android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginBottom="15dp"
            />
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:textSize="20dp" android:text="生词本" android:onClick="startStrange"
                    android:layout_row="1" android:layout_column="0" android:layout_columnWeight="1"
                    android:background="@drawable/searchpage_function_button"
                    android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginBottom="15dp"
            />
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:textSize="20dp" android:text="测    验" android:onClick="startTest"
                    android:layout_row="1" android:layout_column="1" android:layout_columnWeight="1"
                    android:background="@drawable/searchpage_function_button"
                    android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginBottom="15dp"
            />
            <Button android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:textSize="20dp" android:text="退    出" android:onClick="Quit"
                    android:layout_row="2" android:layout_columnSpan="2" android:background="@drawable/mainpage_button"
                android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
            />

        </GridLayout>
    </LinearLayout>
</LinearLayout>