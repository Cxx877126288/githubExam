<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.englishwords.page.ChooseReviewTime"
        android:orientation="vertical"
        android:background="@color/white"
>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textAlignment="center"
            android:text="请选择要复习的日期"
    />

    <ListView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="2"
        android:id="@+id/review_list"  android:dividerHeight="5dp" android:divider="@color/white"
    ></ListView>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:gravity="bottom" android:orientation="vertical" android:layout_weight="1"
    >
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content" android:orientation="horizontal">

            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_gravity="bottom" android:layout_weight="1"
                    android:background="@drawable/mainpage_button"
                    android:text="返回" android:onClick="Chooseback"
            />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
