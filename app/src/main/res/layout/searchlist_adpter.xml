<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:id="@+id/search_word" android:textSize="20dp" android:singleLine="true"
              android:maxEms="15" android:maxLines="1" android:ellipsize="end"
    />

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/search_word_mean" android:textSize="20dp" android:singleLine="true"
              android:maxEms="5" android:maxLines="1" android:ellipsize="end"
    />
</LinearLayout>
